@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Test>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = null;
}

<html>
<head>

</head>
<body>
    <h2>Standard Business Hours (No times)</h2>
    <table>
        <tbody>
            @foreach (var day in Model.StandardHours)
            {
                <tr>
                    <td>
                        @day.DayOfTheWeek (@day.Day)<br />
                        Is Open: @day.IsOpen
                    </td>
                    <td>
                        <table>
                            <tbody>
                                @foreach (var hours in day.HoursOfBusiness)
                                {
                                    <tr>
                                        <td>
                                            @hours.OpensAt <text> - </text>@hours.ClosesAt <br />
                                            <text>By AppointmentOnly:</text> @hours.ByAppointmentOnly
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h2>Standard Business Hours (With times)</h2>
    <table>
        <tbody>
            @foreach (var day in Model.HoursWithTimes)
            {
                <tr>
                    <td>
                        @day.DayOfTheWeek (@day.Day)<br />
                        Is Open: @day.IsOpen
                    </td>
                    <td>
                        <table>
                            <tbody>
                                @foreach (var hours in day.HoursOfBusiness)
                                {
                                    <tr>
                                        <td>
                                            @hours.OpensAt <text> - </text>@hours.ClosesAt <br />
                                            <text>By AppointmentOnly:</text> @hours.ByAppointmentOnly
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>