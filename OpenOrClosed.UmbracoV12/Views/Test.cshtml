@inherits UmbracoViewPage<Umbraco.Cms.Web.Common.PublishedModels.Test>
@{
    Layout = null;
}

<html>
<head>

</head>
<body>
    <h2>Standard Business Hours</h2>
    <table>
        <tbody>
            @foreach (var day in Model.StandardHours)
            {
                <tr>
                    <td>
                        @day.DayOfTheWeek (@day.Day)<br />
                        Is Open: @day.IsOpen
                    </td>
                    <td>
                        <table>
                            <tbody>
                                @foreach (var hours in day.HoursOfBusiness)
                                {
                                    <tr>
                                        <td>
                                            @hours.OpensAt <text> - </text>@hours.ClosesAt <br />
                                            <text>By AppointmentOnly:</text> @hours.ByAppointmentOnly
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </td>
                </tr>
            }
        </tbody>
    </table>

